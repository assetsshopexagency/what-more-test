<!-- blocks/shopify-video-carousel.liquid -->
{{ '//unpkg.com/@shopify/theme-video@1.0.0/index.js' | script_tag }}

<div class="shopify-video-carousel" data-shop="{{ shop.permanent_domain }}">
  <h2 class="carousel-title">{{ block.settings.title | default: 'Featured Videos' }}</h2>
  
  <!-- Loading -->
  <div class="loading-state" id="loadingState">
    <div class="spinner">
      <svg width="50" height="50" viewBox="0 0 50 50">
        <circle cx="25" cy="25" r="20" fill="none" stroke="#3b82f6" stroke-width="4" stroke-dasharray="31.4 31.4">
          <animateTransform attributeName="transform" type="rotate" from="0 25 25" to="360 25 25" dur="1s" repeatCount="indefinite"/>
        </circle>
      </svg>
    </div>
    <p>Loading videos...</p>
  </div>
  
  <!-- Videos Grid -->
  <div class="videos-grid-container" id="videosContainer" style="display: none;">
    <div class="shopify-videos-grid" id="videosGrid">
      <!-- Videos will be inserted here -->
    </div>
  </div>
  
  <!-- Empty -->
  <div class="empty-state" id="emptyState" style="display: none;">
    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#9ca3af" stroke-width="1.5">
      <rect x="2" y="2" width="20" height="20" rx="2.5"/>
      <path d="M7 2v20M17 2v20M2 12h20M2 7h5M2 17h5M17 17h5M17 7h5"/>
    </svg>
    <p>No videos available</p>
    <p class="subtitle">Upload videos from your app dashboard</p>
  </div>
  
  <!-- Error -->
  <div class="error-state" id="errorState" style="display: none;">
    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="1.5">
      <circle cx="12" cy="12" r="10"/>
      <line x1="12" y1="8" x2="12" y2="12"/>
      <line x1="12" y1="16" x2="12.01" y2="16"/>
    </svg>
    <p>Failed to load videos</p>
    <p class="error-message"></p>
    <button class="retry-btn">Try Again</button>
  </div>
</div>

<script>
class ShopifyVideoCarousel {
  constructor() {
    this.shop = document.querySelector('.shopify-video-carousel').dataset.shop;
    this.API_URL = `https://dir-abraham-characterization-jose.trycloudflare.com/api/public/videos?shop=${encodeURIComponent(this.shop)}`;
    this.videos = [];
    
    this.init();
  }
  
  async init() {
    console.log('ðŸš€ Initializing Shopify Video Carousel');
    await this.loadVideos();
  }
  
  async loadVideos() {
    this.showLoading();
    
    try {
      console.log('ðŸ“¡ Fetching from:', this.API_URL);
      const response = await fetch(this.API_URL);
      
      if (!response.ok) {
        throw new Error(`HTTP ${response.status}`);
      }
      
      const data = await response.json();
      console.log('âœ… API Response:', data);
      
      if (data.success && data.videos && data.videos.length > 0) {
        this.videos = data.videos;
        this.renderVideos();
        this.showVideos();
      } else {
        this.showEmptyState();
      }
      
    } catch (error) {
      console.error('âŒ Error:', error);
      this.showError(error.message);
    }
  }
  
  renderVideos() {
    const videosGrid = document.getElementById('videosGrid');
    if (!videosGrid) return;
    
    videosGrid.innerHTML = '';
    
    // Show only first 4 videos for performance
    const videosToShow = this.videos.slice(0, 4);
    
    videosToShow.forEach((video, index) => {
      const videoCard = document.createElement('div');
      videoCard.className = 'shopify-video-card';
      
      // Get the best MP4 source
      const mp4Source = video.sources?.find(s => s.format === 'mp4');
      const videoUrl = mp4Source?.url || '';
      
      // Get thumbnail
      const thumbnailUrl = video.thumbnail_url || video.previewImage?.url || 
                          'https://placehold.co/400x300/1e40af/ffffff?text=Video';
      
      videoCard.innerHTML = `
        <div class="video-card-inner">
          <!-- Shopify Video Element -->
          <div class="video-wrapper">
            ${videoUrl ? `
              <shopify-video 
                data-video-sources='${JSON.stringify(video.sources || [])}'
                data-preview-image='${JSON.stringify(video.previewImage || {})}'
                data-autoplay="${index === 0 ? 'true' : 'false'}"
                data-loop="true"
                data-muted="true"
                data-controls="true"
                data-playsinline="true"
                data-loading="lazy"
              >
                <!-- Fallback for older browsers -->
                <video
                  src="${videoUrl}"
                  poster="${thumbnailUrl}"
                  loop
                  muted
                  playsinline
                  controls
                  preload="metadata"
                  loading="lazy"
                  style="width: 100%; height: 100%; object-fit: cover;"
                >
                  ${video.sources?.map(source => `
                    <source src="${source.url}" type="${source.mimeType}">
                  `).join('') || ''}
                  Your browser does not support the video tag.
                </video>
              </shopify-video>
            ` : `
              <div class="no-video">
                <img 
                  src="${thumbnailUrl}" 
                  alt="${video.title}"
                  loading="lazy"
                  style="width: 100%; height: 100%; object-fit: cover;"
                />
              </div>
            `}
            
            <!-- Play button overlay -->
            ${videoUrl ? `
              <div class="video-overlay">
                <button class="shopify-play-btn" aria-label="Play video">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </button>
              </div>
            ` : ''}
          </div>
          
          <!-- Video Info -->
          <div class="video-info">
            <h3 class="video-title">${video.title}</h3>
            ${video.description ? `<p class="video-description">${video.description}</p>` : ''}
            ${video.duration && video.duration !== '0:00' ? `
              <div class="video-meta">
                <span class="duration">${video.duration}</span>
              </div>
            ` : ''}
          </div>
        </div>
      `;
      
      videosGrid.appendChild(videoCard);
      
      // Initialize Shopify video component
      if (videoUrl && window.Shopify && window.Shopify.Video) {
        setTimeout(() => {
          const shopifyVideo = videoCard.querySelector('shopify-video');
          if (shopifyVideo) {
            try {
              // Initialize Shopify video component
              new window.Shopify.Video(shopifyVideo);
            } catch (error) {
              console.log('Shopify Video component error:', error);
            }
          }
        }, 100);
      }
    });
    
    console.log(`âœ… Rendered ${videosToShow.length} videos`);
  }
  
  showLoading() {
    document.getElementById('loadingState').style.display = 'flex';
    document.getElementById('videosContainer').style.display = 'none';
    document.getElementById('emptyState').style.display = 'none';
    document.getElementById('errorState').style.display = 'none';
  }
  
  showVideos() {
    document.getElementById('loadingState').style.display = 'none';
    document.getElementById('videosContainer').style.display = 'block';
    document.getElementById('emptyState').style.display = 'none';
    document.getElementById('errorState').style.display = 'none';
  }
  
  showEmptyState() {
    document.getElementById('loadingState').style.display = 'none';
    document.getElementById('videosContainer').style.display = 'none';
    document.getElementById('emptyState').style.display = 'flex';
    document.getElementById('errorState').style.display = 'none';
  }
  
  showError(message) {
    document.getElementById('loadingState').style.display = 'none';
    document.getElementById('videosContainer').style.display = 'none';
    document.getElementById('emptyState').style.display = 'none';
    document.getElementById('errorState').style.display = 'flex';
    
    const errorMessage = document.querySelector('.error-message');
    if (errorMessage) errorMessage.textContent = message;
    
    // Setup retry button
    const retryBtn = document.querySelector('.retry-btn');
    if (retryBtn) {
      retryBtn.onclick = () => this.loadVideos();
    }
  }
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', () => {
  // Load Shopify Video component if available
  if (typeof Shopify === 'undefined') {
    // Load Shopify theme scripts
    const script = document.createElement('script');
    script.src = '//cdn.shopify.com/shopifycloud/shopify-common.js';
    script.onload = () => {
      new ShopifyVideoCarousel();
    };
    document.head.appendChild(script);
  } else {
    new ShopifyVideoCarousel();
  }
});
</script>

<style>
/* Shopify Video Carousel Styles */
.shopify-video-carousel {
  width: 100%;
  max-width: 1280px;
  margin: 0 auto;
  padding: 3rem 1.5rem;
  background: #000;
}

.carousel-title {
  text-align: center;
  color: white;
  font-size: 2.5rem;
  margin-bottom: 3rem;
  font-weight: 700;
  letter-spacing: -0.5px;
}

/* Loading State */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: white;
  text-align: center;
}

.spinner {
  margin-bottom: 1.5rem;
}

.spinner circle {
  stroke-linecap: round;
}

.loading-state p {
  font-size: 1.125rem;
  opacity: 0.8;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: #9ca3af;
  text-align: center;
  padding: 2rem;
}

.empty-state svg {
  margin-bottom: 1.5rem;
  opacity: 0.5;
}

.empty-state p {
  font-size: 1.25rem;
  margin-bottom: 0.5rem;
}

.empty-state .subtitle {
  font-size: 1rem;
  opacity: 0.7;
}

/* Error State */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: white;
  text-align: center;
  padding: 2rem;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 12px;
}

.error-state svg {
  margin-bottom: 1.5rem;
}

.error-state p {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: #fca5a5;
}

.error-message {
  font-size: 0.875rem;
  opacity: 0.8;
  margin-bottom: 1.5rem;
  max-width: 400px;
}

.retry-btn {
  background: #3b82f6;
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.retry-btn:hover {
  background: #2563eb;
  transform: translateY(-2px);
}

/* Videos Grid */
.videos-grid-container {
  width: 100%;
}

.shopify-videos-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 2rem;
  padding: 1rem 0;
}

@media (min-width: 640px) {
  .shopify-videos-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .shopify-videos-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* Shopify Video Card */
.shopify-video-card {
  background: #111;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.shopify-video-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

.video-card-inner {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* Video Wrapper */
.video-wrapper {
  position: relative;
  width: 100%;
  height: 250px;
  overflow: hidden;
  background: #000;
}

shopify-video {
  width: 100%;
  height: 100%;
  display: block;
}

shopify-video video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.no-video {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1a1a1a;
}

.no-video img {
  opacity: 0.5;
}

/* Video Overlay */
.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.2);
  opacity: 0;
  transition: opacity 0.3s;
}

.shopify-video-card:hover .video-overlay {
  opacity: 1;
}

.shopify-play-btn {
  background: rgba(0, 0, 0, 0.8);
  border: none;
  border-radius: 50%;
  width: 56px;
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
  backdrop-filter: blur(4px);
}

.shopify-play-btn:hover {
  background: rgba(59, 130, 246, 0.9);
  transform: scale(1.1);
}

.shopify-play-btn svg {
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
}

/* Video Info */
.video-info {
  padding: 1.5rem;
  color: white;
  flex-grow: 1;
}

.video-title {
  font-size: 1.125rem;
  font-weight: 700;
  margin: 0 0 0.75rem 0;
  line-height: 1.3;
  color: #fff;
}

.video-description {
  font-size: 0.875rem;
  color: #ccc;
  margin: 0 0 1rem 0;
  line-height: 1.5;
}

.video-meta {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.duration {
  display: inline-block;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
}

/* Mobile Responsive */
@media (max-width: 639px) {
  .shopify-video-carousel {
    padding: 2rem 1rem;
  }
  
  .carousel-title {
    font-size: 1.75rem;
    margin-bottom: 2rem;
  }
  
  .shopify-videos-grid {
    gap: 1.5rem;
  }
  
  .video-wrapper {
    height: 200px;
  }
  
  .video-info {
    padding: 1.25rem;
  }
}

/* Performance optimizations */
shopify-video {
  contain: content;
}

.video-wrapper {
  content-visibility: auto;
  contain-intrinsic-size: 250px;
}

.shopify-video-card {
  will-change: transform;
}
</style>

