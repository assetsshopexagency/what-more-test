<script>
// Wait for DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
  class ShopifyVideoCarousel {
    constructor() {
      // Get the shop domain from the element's data attribute
      const container = document.querySelector('.shopify-video-carousel');
      if (!container) return;
      
      this.shop = container.dataset.shop || '{{ shop.permanent_domain }}';
      
      // Build the API URL
      this.API_URL = `/api/videos?shop=${encodeURIComponent(this.shop)}`;
      
     this.API_URL = 'https://associates-legislature-sub-back.trycloudflare.com/api/videos?shop=' + encodeURIComponent(this.shop);
      
      console.log('ðŸš€ Initializing Shopify Video Carousel for shop:', this.shop);
      console.log('ðŸ“¡ API URL:', this.API_URL);
      
      this.videos = [];
      this.init();
    }
    
    async init() {
      await this.loadVideos();
      this.setupEventListeners();
    }
    
    async loadVideos() {
      this.showLoading();
      
      try {
        console.log('ðŸ“¡ Fetching videos from:', this.API_URL);
        const response = await fetch(this.API_URL);
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        console.log('âœ… API Response:', data);
        
        if (data.success && data.videos && data.videos.length > 0) {
          this.videos = data.videos;
          this.renderVideos();
          this.showVideos();
        } else {
          console.log('No videos found or empty response');
          this.showEmptyState();
        }
        
      } catch (error) {
        console.error('âŒ Error loading videos:', error);
        this.showError(error.message || 'Failed to load videos');
      }
    }
    
    renderVideos() {
      const videosGrid = document.getElementById('videosGrid');
      if (!videosGrid) return;
      
      videosGrid.innerHTML = '';
      
      // Show only first 4 videos for performance
      const videosToShow = this.videos.slice(0, 4);
      
      if (videosToShow.length === 0) {
        this.showEmptyState();
        return;
      }
      
      videosToShow.forEach((video, index) => {
        const videoCard = document.createElement('div');
        videoCard.className = 'shopify-video-card';
        videoCard.dataset.videoId = video.id;
        
        // Use direct video URL
        const videoUrl = video.video_url || video.shopify_file_url || '';
        const thumbnailUrl = video.thumbnail_url || 'https://placehold.co/400x300/1e40af/ffffff?text=Video';
        
        videoCard.innerHTML = `
          <div class="video-card-inner">
            <!-- Video Player -->
            <div class="video-wrapper">
              ${videoUrl ? `
                <div class="video-player">
                  <video
                    id="video-${video.id}"
                    src="${videoUrl}"
                    poster="${thumbnailUrl}"
                    controls
                    playsinline
                    preload="metadata"
                    loading="lazy"
                  >
                    Your browser does not support the video tag.
                  </video>
                  
                  <!-- Play button overlay -->
                  <div class="video-overlay">
                    <button class="shopify-play-btn" aria-label="Play video" data-video-id="${video.id}">
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </button>
                  </div>
                </div>
              ` : `
                <div class="no-video">
                  <img 
                    src="${thumbnailUrl}" 
                    alt="${video.title}"
                    loading="lazy"
                  />
                </div>
              `}
            </div>
            
            <!-- Video Info -->
            <div class="video-info">
              <h3 class="video-title">${this.escapeHtml(video.title)}</h3>
              ${video.description ? `<p class="video-description">${this.escapeHtml(video.description)}</p>` : ''}
              ${video.duration && video.duration !== '0:00' ? `
                <div class="video-meta">
                  <span class="duration">${video.duration}</span>
                </div>
              ` : ''}
            </div>
          </div>
        `;
        
        videosGrid.appendChild(videoCard);
        
        // Initialize video controls if video exists
        if (videoUrl) {
          this.initializeVideoControls(videoCard, video.id);
        }
      });
      
      console.log(`âœ… Rendered ${videosToShow.length} videos`);
    }
    
    initializeVideoControls(videoCard, videoId) {
      const videoElement = videoCard.querySelector(`#video-${videoId}`);
      const playButton = videoCard.querySelector(`.shopify-play-btn[data-video-id="${videoId}"]`);
      const overlay = videoCard.querySelector('.video-overlay');
      
      if (!videoElement || !playButton || !overlay) return;
      
      // Play button click handler
      playButton.addEventListener('click', () => {
        if (videoElement.paused) {
          videoElement.play().catch(e => console.error('Play failed:', e));
        }
      });
      
      // Video play/pause events
      videoElement.addEventListener('play', () => {
        overlay.style.opacity = '0';
        overlay.style.pointerEvents = 'none';
      });
      
      videoElement.addEventListener('pause', () => {
        overlay.style.opacity = '1';
        overlay.style.pointerEvents = 'auto';
      });
      
      // Hide overlay when controls are shown
      videoElement.addEventListener('mouseenter', () => {
        if (!videoElement.paused) {
          overlay.style.opacity = '0';
        }
      });
      
      // Pause other videos when one plays
      videoElement.addEventListener('play', () => {
        document.querySelectorAll('video').forEach(vid => {
          if (vid !== videoElement && !vid.paused) {
            vid.pause();
          }
        });
      });
    }
    
    escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
    
    showLoading() {
      this.hideAllStates();
      const loadingState = document.getElementById('loadingState');
      if (loadingState) loadingState.style.display = 'flex';
    }
    
    showVideos() {
      this.hideAllStates();
      const videosContainer = document.getElementById('videosContainer');
      if (videosContainer) videosContainer.style.display = 'block';
    }
    
    showEmptyState() {
      this.hideAllStates();
      const emptyState = document.getElementById('emptyState');
      if (emptyState) emptyState.style.display = 'flex';
    }
    
    showError(message) {
      this.hideAllStates();
      const errorState = document.getElementById('errorState');
      if (errorState) {
        errorState.style.display = 'flex';
        const errorMsg = errorState.querySelector('.error-message');
        if (errorMsg) errorMsg.textContent = message;
      }
    }
    
    hideAllStates() {
      const states = ['loadingState', 'videosContainer', 'emptyState', 'errorState'];
      states.forEach(id => {
        const element = document.getElementById(id);
        if (element) element.style.display = 'none';
      });
    }
    
    setupEventListeners() {
      // Retry button
      const retryBtn = document.querySelector('.retry-btn');
      if (retryBtn) {
        retryBtn.addEventListener('click', () => this.loadVideos());
      }
    }
  }
  
  // Initialize the carousel
  new ShopifyVideoCarousel();
});
</script>

<style>
/* Shopify Video Carousel Styles */
.shopify-video-carousel {
  width: 100%;
  max-width: 1280px;
  margin: 0 auto;
  padding: 3rem 1.5rem;
  background: #000;
}

.carousel-title {
  text-align: center;
  color: white;
  font-size: 2.5rem;
  margin-bottom: 3rem;
  font-weight: 700;
  letter-spacing: -0.5px;
}

/* Loading State */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: white;
  text-align: center;
}

.spinner {
  margin-bottom: 1.5rem;
}

.spinner circle {
  stroke-linecap: round;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-state p {
  font-size: 1.125rem;
  opacity: 0.8;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: #9ca3af;
  text-align: center;
  padding: 2rem;
}

.empty-state svg {
  margin-bottom: 1.5rem;
  opacity: 0.5;
}

.empty-state p {
  font-size: 1.25rem;
  margin-bottom: 0.5rem;
}

.empty-state .subtitle {
  font-size: 1rem;
  opacity: 0.7;
}

/* Error State */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: white;
  text-align: center;
  padding: 2rem;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 12px;
}

.error-state svg {
  margin-bottom: 1.5rem;
}

.error-state p {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: #fca5a5;
}

.error-message {
  font-size: 0.875rem;
  opacity: 0.8;
  margin-bottom: 1.5rem;
  max-width: 400px;
}

.retry-btn {
  background: #3b82f6;
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.retry-btn:hover {
  background: #2563eb;
  transform: translateY(-2px);
}

/* Videos Grid */
.videos-grid-container {
  width: 100%;
}

.shopify-videos-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 2rem;
  padding: 1rem 0;
}

@media (min-width: 640px) {
  .shopify-videos-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .shopify-videos-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* Shopify Video Card */
.shopify-video-card {
  background: #111;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.shopify-video-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

.video-card-inner {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* Video Player */
.video-wrapper {
  position: relative;
  width: 100%;
  height: 250px;
  overflow: hidden;
  background: #000;
}

.video-player {
  width: 100%;
  height: 100%;
  position: relative;
}

.video-player video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.no-video {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1a1a1a;
}

.no-video img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.5;
}

/* Video Overlay */
.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  transition: opacity 0.3s, background 0.3s;
  opacity: 1;
  cursor: pointer;
}

.video-overlay:hover {
  background: rgba(0, 0, 0, 0.5);
}

.shopify-play-btn {
  background: rgba(59, 130, 246, 0.9);
  border: none;
  border-radius: 50%;
  width: 56px;
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
  backdrop-filter: blur(4px);
}

.shopify-play-btn:hover {
  background: rgba(37, 99, 235, 0.9);
  transform: scale(1.1);
}

.shopify-play-btn svg {
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
  margin-left: 4px; /* Center the play icon */
}

/* Video Info */
.video-info {
  padding: 1.5rem;
  color: white;
  flex-grow: 1;
}

.video-title {
  font-size: 1.125rem;
  font-weight: 700;
  margin: 0 0 0.75rem 0;
  line-height: 1.3;
  color: #fff;
}

.video-description {
  font-size: 0.875rem;
  color: #ccc;
  margin: 0 0 1rem 0;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.video-meta {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.duration {
  display: inline-block;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
}

/* Mobile Responsive */
@media (max-width: 639px) {
  .shopify-video-carousel {
    padding: 2rem 1rem;
  }
  
  .carousel-title {
    font-size: 1.75rem;
    margin-bottom: 2rem;
  }
  
  .shopify-videos-grid {
    gap: 1.5rem;
  }
  
  .video-wrapper {
    height: 200px;
  }
  
  .video-info {
    padding: 1.25rem;
  }
}
</style>

<div class="shopify-video-carousel" data-shop="{{ shop.permanent_domain }}">
  <h2 class="carousel-title">{{ block.settings.title | default: 'Featured Videos' }}</h2>
  
  <!-- Loading State -->
  <div class="loading-state" id="loadingState">
    <div class="spinner">
      <svg width="50" height="50" viewBox="0 0 50 50">
        <circle cx="25" cy="25" r="20" fill="none" stroke="#3b82f6" stroke-width="4" stroke-dasharray="31.4 31.4">
          <animateTransform attributeName="transform" type="rotate" from="0 25 25" to="360 25 25" dur="1s" repeatCount="indefinite"/>
        </circle>
      </svg>
    </div>
    <p>Loading videos...</p>
  </div>
  
  <!-- Videos Grid -->
  <div class="videos-grid-container" id="videosContainer" style="display: none;">
    <div class="shopify-videos-grid" id="videosGrid">
      <!-- Videos will be inserted here by JavaScript -->
    </div>
  </div>
  
  <!-- Empty State -->
  <div class="empty-state" id="emptyState" style="display: none;">
    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#9ca3af" stroke-width="1.5">
      <rect x="2" y="2" width="20" height="20" rx="2.5"/>
      <path d="M7 2v20M17 2v20M2 12h20M2 7h5M2 17h5M17 17h5M17 7h5"/>
    </svg>
    <p>No videos available</p>
    <p class="subtitle">Upload videos from your app dashboard</p>
  </div>
  
  <!-- Error State -->
  <div class="error-state" id="errorState" style="display: none;">
    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="1.5">
      <circle cx="12" cy="12" r="10"/>
      <line x1="12" y1="8" x2="12" y2="12"/>
      <line x1="12" y1="16" x2="12.01" y2="16"/>
    </svg>
    <p>Failed to load videos</p>
    <p class="error-message"></p>
    <button class="retry-btn">Try Again</button>
  </div>
</div>

